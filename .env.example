# ========================================
# LASKAZOO - НАЛАШТУВАННЯ ОПЛАТИ
# ========================================

# Django Secret Key
SECRET_KEY=your-secret-key-here-change-in-production

# Debug (True для розробки, False для продакшену)
DEBUG=True

# Дозволені хости (розділяй комою)
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# ========================================
# PORTMONE НАЛАШТУВАННЯ
# ========================================

# Отримай ці дані після реєстрації на https://www.portmone.com.ua/
PORTMONE_PAYEE_ID=your_payee_id_here
PORTMONE_LOGIN=your_login_here
PORTMONE_PASSWORD=your_password_here

# Тестові дані для розробки (замість реальних)
# PORTMONE_PAYEE_ID=test_payee_id
# PORTMONE_LOGIN=test_login
# PORTMONE_PASSWORD=test_password

# ========================================
# GOOGLE PAY НАЛАШТУВАННЯ (опціонально)
# ========================================

# Отримай після реєстрації в Google Pay API
GOOGLE_PAY_MERCHANT_ID=your_merchant_id_here
GOOGLE_PAY_ENVIRONMENT=TEST  # TEST або PRODUCTION

# ========================================
# БАЗА ДАНИХ
# ========================================

DB_ENGINE=django.db.backends.postgresql  # або sqlite3
DB_NAME=laskazoo_db
DB_USER=laskazoo_user
DB_PASSWORD=secure_password_here
DB_HOST=localhost
DB_PORT=5432

# ========================================
# EMAIL НАЛАШТУВАННЯ (для нотифікацій)
# ========================================

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here

# Email для відправника
DEFAULT_FROM_EMAIL=noreply@laskazoo.com
ADMIN_EMAIL=admin@laskazoo.com

# ========================================
# ДОДАТКОВІ НАЛАШТУВАННЯ
# ========================================

# URL сайту (для callback URL)
SITE_URL=http://localhost:8000  # Або https://yourdomain.com

# Часовий пояс
TIME_ZONE=Europe/Kiev

# Мова
LANGUAGE_CODE=uk

# ========================================
# БЕЗПЕКА
# ========================================

# HTTPS (True на продакшені)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# ========================================
# ЛОГУВАННЯ
# ========================================

# Рівень логування (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Зберігати логи транзакцій
PAYMENT_LOGGING_ENABLED=True
